<link href="~/css/Tabs.css" rel="stylesheet" />
<link href="~/css/ScotchDetails.css" rel="stylesheet" />


@model Scotch.Model.ScotchDTO
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div><h2>@Html.DisplayFor(model => model.dramName)</h2></div>

<div class="container-fluid">
    <div class="scotchDetailHeader">
        <div class="scotch-rating">
            @for (var i = 1; i <= Model.rating; i++)
            {
                <div>
                    <i class="star glyphicon fas fa-star"></i>
                </div>
            }
            @for (var j = Model.rating + 1; j <= 5; j++)
            {
                <div>
                    <i class="star glyphicon far fa-star"></i>
                </div>
            }
        </div>
        <div class="in-stock">
            <span>In Stock: </span>
            @if (Model.inStock)
            {
                <span class="check-mark"><i class="fa fa-check"></i></span>
            }
            else
            {
                <span class="red-x"><i class="fa fa-times"></i></span>
            }
        </div>
    </div>
</div>

<div class="spacer"></div>

<div class="container-fluid">
    <div class="editIcon">
        <i class="fas fa-pencil-alt" onclick="edit('@Model._id')"></i>
    </div>
    <div class="scotchDetails">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.distillerName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.distillerName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.flavor)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.flavor)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.age)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.age)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.style)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.style)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.region)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.region)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.bottlingNotes)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.bottlingNotes)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.comment)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.comment)
            </dd>
        </dl>
    </div>
</div>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#notes">Notes</a></li>
        <li><a data-toggle="tab" href="#mytasting">My Tasting Notes</a></li>
        <li><a data-toggle="tab" href="#3rdtasting">3rd Party Tasting Notes</a></li>
        <li><a data-toggle="tab" href="#wishlists">Wish Lists</a></li>
        <li><a data-toggle="tab" href="#pricelist">Price List</a></li>
    </ul>
    <div class="tab-content">
        <div id="notes" class="tab-pane fade in active">
                <table>
                    <thead>
                        <tr>
                            <th class="Open-Column"></th>
                            <th class="Note-Date-Column">
                                @Html.DisplayNameFor(model => model.notes[0].dateAdded)
                            </th>
                            <th class="Note-Comment-Column">
                                @Html.DisplayNameFor(model => model.notes[0].note)
                            </th>
                            <th class="Edit-Column"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var note in Model.notes)
                        {
                            <tr>
                                <td class="Open-Column">
                                    <a href="@Url.Action("Details", "Note", new { NoteId = note._id, ScotchId = Model._id })" class=""><i class="far fa-folder-open"></i></a>
                                </td>
                                <td class="Note-Date-Column">
                                    @Html.DisplayFor(modelItem => note.dateAdded)
                                </td>
                                <td class="Note-Comment-Column">
                                    @Html.DisplayFor(modelItem => note.note)
                                </td>
                                <td class="Edit-Column">
                                    <div>
                                        @Html.ActionLink("Edit", "Edit", new { id = note._id }, new { @class = "btn-xs btn-default" })
                                        @Html.ActionLink("Delete", "Delete", new { id = note._id }, new { @class = "btn-xs btn-default" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
        </div>

        <div id="mytasting" class="tab-pane fade">
                <table>
                    <thead>
                        <tr>
                            <th class="Tasting-Open-Column"></th>
                            <th class="Tasting-Date-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].dateAddedPretty)
                            </th>
                            <th class="Tasting-Rating-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].rating)
                            </th>
                            <th class="Tasting-Comment-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].nose)
                            </th>
                            <th class="Tasting-Comment-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].palate)
                            </th>
                            <th class="Tasting-Comment-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].finish)
                            </th>
                            <th class="Tasting-Comment-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].comment)
                            </th>
                            <th class="Edit-Column"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var tasting in Model.tastings)
                        {
                            @if (tasting.personal)
                            {
                                <tr>
                                    <td class="Tasting-Open-Column">
                                        <a href="@Url.Action("Details", "Tasting", new { id = tasting._id })" class=""><i class="far fa-folder-open"></i></a>
                                    </td>
                                    <td class="Tasting-Date-Column">
                                        @Html.DisplayFor(modelItem => tasting.dateAddedPretty)
                                    </td>
                                    <td class="Tasting-Rating-Column">
                                        @Html.DisplayFor(modelItem => tasting.rating)
                                    </td>
                                    <td class="Tasting-Comment-Column">
                                        @Html.DisplayFor(modelItem => tasting.nose)
                                    </td>
                                    <td class="Tasting-Comment-Column">
                                        @Html.DisplayFor(modelItem => tasting.palate)
                                    </td>
                                    <td class="Tasting-Comment-Column">
                                        @Html.DisplayFor(modelItem => tasting.finish)
                                    </td>
                                    <td class="Tasting-Comment-Column">
                                        @Html.DisplayFor(modelItem => tasting.comment)
                                    </td>
                                    <td class="Edit-Column">
                                        <div>
                                            @Html.ActionLink("Edit", "Edit", new { id = tasting._id }, new { @class = "btn-xs btn-default" })
                                            @Html.ActionLink("Delete", "Delete", new { id = tasting._id }, new { @class = "btn-xs btn-default" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
        </div>

        <div id="3rdtasting" class="tab-pane fade">
                <table>
                    <thead>
                        <tr>
                            <th class="Tasting-Open-Column"></th>
                            <th class="Tasting-Date-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].dateAddedPretty)
                            </th>
                            <th class="Tasting-Rating-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].rating)
                            </th>
                            <th class="Tasting-Comment-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].nose)
                            </th>
                            <th class="Tasting-Comment-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].palate)
                            </th>
                            <th class="Tasting-Comment-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].finish)
                            </th>
                            <th class="Tasting-Comment-Column">
                                @Html.DisplayNameFor(model => model.tastings[0].comment)
                            </th>
                            <th class="Edit-Column"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tasting in Model.tastings)
                        {
                            @if (tasting.thirdParty)
                            {
                                <tr>
                                    <td class="Tasting-Open-Column">
                                        <a href="@Url.Action("Details", "Tasting", new { id = tasting._id })" class=""><i class="far fa-folder-open"></i></a>
                                    </td>
                                    <td class="Tasting-Date-Column">
                                        @Html.DisplayFor(modelItem => tasting.dateAddedPretty)
                                    </td>
                                    <td class="Tasting-Rating-Column">
                                        @Html.DisplayFor(modelItem => tasting.rating)
                                    </td>
                                    <td class="Tasting-Comment-Column">
                                        @Html.DisplayFor(modelItem => tasting.nose)
                                    </td>
                                    <td class="Tasting-Comment-Column">
                                        @Html.DisplayFor(modelItem => tasting.palate)
                                    </td>
                                    <td class="Tasting-Comment-Column">
                                        @Html.DisplayFor(modelItem => tasting.finish)
                                    </td>
                                    <td class="Tasting-Comment-Column">
                                        @Html.DisplayFor(modelItem => tasting.comment)
                                    </td>
                                    <td class="Edit-Column">
                                        <div>
                                            @Html.ActionLink("Edit", "Edit", new { id = tasting._id }, new { @class = "btn-xs btn-default" })
                                            @Html.ActionLink("Delete", "Delete", new { id = tasting._id }, new { @class = "btn-xs btn-default" })
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
        </div>

        <div id="wishlists" class="tab-pane fade">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Wish Lists
                            </th>
                            <th class="editColumn"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wishlist in Model.wishLists)
                        {
                            <tr>
                                <td class="textColumn">
                                    @Html.DisplayFor(modelItem => wishlist)
                                </td>
                                <td class="editColumn">
                                    <div>
                                        @Html.ActionLink("Delete", "Delete", new { /*id = wishlist._id */ }, new { @class = "btn-sm btn-default" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div id="pricelist" class="tab-pane fade">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="dateColumn">
                                @Html.DisplayNameFor(model => model.prices[0].dateAdded)
                            </th>
                            <th class="textColumn">
                                @Html.DisplayNameFor(model => model.prices[0].location)
                            </th>
                            <th class="textColumn">
                                @Html.DisplayNameFor(model => model.prices[0].size)
                            </th>
                            <th class="numericColumn">
                                @Html.DisplayNameFor(model => model.prices[0].price)
                            </th>
                            <th class="numericColumn">
                                @Html.DisplayNameFor(model => model.prices[0].tax)
                            </th>
                            <th class="numericColumn">
                                @Html.DisplayNameFor(model => model.prices[0].shipping)
                            </th>
                            <th class="numericColumn">
                                @Html.DisplayNameFor(model => model.prices[0].total)
                            </th>
                            <th class="textColumn">
                                @Html.DisplayNameFor(model => model.prices[0].comment)
                            </th>
                            <th class="editColumn"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var price in Model.prices)
                        {
                            <tr>
                                <td class="textColumn">
                                    @Html.DisplayFor(modelItem => price.dateAdded)
                                </td>
                                <td class="textColumn">
                                    @Html.DisplayFor(modelItem => price.location)
                                </td>
                                <td class="textColumn">
                                    @Html.DisplayFor(modelItem => price.size)
                                </td>
                                <td class="numericColumn">
                                    @Html.DisplayFor(modelItem => price.price)
                                </td>
                                <td class="numericColumn">
                                    @Html.DisplayFor(modelItem => price.tax)
                                </td>
                                <td class="numericColumn">
                                    @Html.DisplayFor(modelItem => price.shipping)
                                </td>
                                <td class="numericColumn">
                                    @Html.DisplayFor(modelItem => price.total)
                                </td>
                                <td class="textColumn">
                                    @Html.DisplayFor(modelItem => price.comment)
                                </td>
                                <td class="editColumn">
                                    <div>
                                        @Html.ActionLink("Delete", "Delete", new { /*id = wishlist._id */ }, new { @class = "btn-xs btn-default" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


<script type="text/javascript">
    function edit(id) {
        console.log(id);
        window.location.href = "http://localhost:62942/Scotch/Edit/" + id;
    }
</script>
